	<element name="Strength" type="Ability Score Improvement" source="Player’s Handbook 2024" id="ID_WOTC_PHB24_ASI_STRENGTH">
		<supports>Ability Score Improvement, Class, Strength</supports>
		<description>
			<p>Your Strength score increases by 1.</p>
		</description>
		<sheet display="false" />
		<setters>
			<set name="allow duplicate">true</set>
		</setters>
		<rules>
			<stat name="strength" value="1" alt="Ability Score Increase" />
