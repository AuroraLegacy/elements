	<!-- Expertise -->
	<element name="Skill Expertise (Acrobatics)" type="Class Feature" source="Player’s Handbook 2024" id="ID_WOTC_PHB24_EXPERTISE_SKILL_ACROBATICS">
		<supports>Expertise, Skill, ID_INTERNAL_SUPPORT_EXPERTISE</supports>
		<requirements>ID_WOTC_PHB24_PROFICIENCY_SKILL_ACROBATICS</requirements>
		<description>
			<p>Your proficiency bonus is doubled for any Acrobatics check you make.</p>
			<div class="reference">
				<div element="ID_WOTC_PHB24_PROFICIENCY_SKILL_ACROBATICS" />
			</div>
		</description>
		<sheet display="false" />
		<rules>
			<stat name="acrobatics:proficiency" value="proficiency" bonus="double" />
		</rules>
	</element>
